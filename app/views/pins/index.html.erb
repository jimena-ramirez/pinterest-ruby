<h1>Pins</h1>
<div id="justify-content-center d-flex">
  <% count =1; %>
  <% @pins.each do |pin| %>
  <% if count == 1 %>
    <div class="row">
  <%end%>
   <div class="col-md-3 d-inline-block" style="width:35%">
    <div class="img-thumbnail">   
        <%= pin.name %>
        <%= image_tag pin.photo, :class=> 'img-fluid' %>
        <%= pin.description %>
          <div class="buttons" style="margin-top:10px; margin-bottom:10px ">
        
        <%= link_to 'Show', pin, :class=> 'btn btn btn-secondary',:style =>'text-decoration:none' %>
        <%= link_to 'Edit', edit_pin_path(pin), :class=> 'btn btn-secondary' ,:style =>'text-decoration:none' %>
        <% if user_signed_in? %>
        <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, :class=> 'btn btn-secondary', :style =>'text-decoration:none' %>
        <% end %>
          </div>
      </div>
  </div>
  <% if count ==4 %>
    </div>
    <br/>
    <% count =1 %>
  <% else %>
    <%count += 1%>
    <% end %>
    <% end %>
</div>
<br>
<br>
<br>
<% if user_signed_in? %>
<%= link_to 'Nuevo Pin', new_pin_path, :class=> 'btn btn-success', :style =>'text-decoration:none' %>
<% end %>



